Config { font     = "xft:Inconsolata:size=8:bold:antialias=true"
       , bgColor  = "#000000"
       , fgColor  = "#BFBFBF"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Date "%a %b %_d %Y * %I:%M:%S" "theDate" 10
                    , Run StdinReader
                    , Run Com "ssid.sh" [] "ssid" 5
                    , Run Battery [ "--template" , "B: <acstatus>"
                                  , "--Low"      , "15"
                                  , "--High"     , "80"
                                  , "--low"      , "red"
                                  , "--normal"   , "orange"
                                  , "--high"     , "green"
                                  , "--"
                                  , "-o" , "<left>% (<timeleft>)"
                                  , "-O" , "<fc=#dAA520>Charing</fc> <left>%"
                                  , "-i" , "<fc=#006000>Charged</fc>"
                                  ] 60]
       , sepChar  = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %battery% | <fc=#00FF00>%ssid%</fc> | <fc=#FF0000>%theDate%</fc>"
       }
