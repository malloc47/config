#!/bin/bash

if [ "$1" = "-t" ] ; then test=false; else test=true; fi

for f in "$@"
do
	if [ "$f" = "-t" ] ; then continue; fi
#	mv $f `echo $f | awk '{print tolower($0)}' `
	file=$(echo $f | tr A-Z a-z | tr ' ' - )
	if [ "$f" != $file  ]; then
		[ ! -f $file ] && $test && mv "$f" "$file" && echo "$f -> $file"
		! $test && echo mv "$f" "$file"
	fi
done
